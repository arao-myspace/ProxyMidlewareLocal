                    <StandardListItem title="{Passname}" description="Date of Flight: {path: 'Fldate', type: 'sap.ui.model.type.DateTime', formatOptions: { pattern: 'DD.MM.YYYY' }}" type="Active" press="onNavToProduct" iconDensityAware="false" iconInset="false" />
                </List>
            </Page>
        </NavContainer>
    </Popover>
</core:FragmentDefinition>