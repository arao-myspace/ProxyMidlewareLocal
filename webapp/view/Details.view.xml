<mvc:View
	controllerName="sap.ui.demo.basicTemplate.controller.Details"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
>
	<Page
		id="pageDetails"
		title="{i18n>titleDetails}"
		showNavButton="true"
		navButtonPress="onBackToHome"
	>
		<content>
<IconTabBar
		id="idIconTabBarMulti"
		expanded="{device>/isNoPhone}"
		class="sapUiResponsiveContentPadding">
		<items>
			<IconTabFilter icon="sap-icon://hint" key="info">
							<Table id="tableDetails">
				<columns>
					<Column minScreenWidth="Phone">
						<Label text="Carrier ID"/>
					</Column>
					<Column minScreenWidth="Phone">
						<Label text="Connection ID"/>
					</Column>
					<Column minScreenWidth="Phone">
						<Label text="Booking no."/>
					</Column>
					<Column minScreenWidth="Tablet">
						<Label text="Price"/>
					</Column>
					<Column minScreenWidth="Desktop">
						<Label text="Invoice"/>
					</Column>
				</columns>
				<dependents>
					<ColumnListItem
						id="colListItemTempl"
						type="Active"
						press="onDetailPress"
					>
						<cells>
							<Text text="{Carrid}"/>
							<Text text="{Connid}"/>
							<Text text="{Bookid}"/>
							<ObjectNumber
								inverted="true"
								number="{
								parts:[{path:'Forcuram'},{path:'Forcurkey'}],
								type: 'sap.ui.model.type.Currency',
								formatOptions: {showMeasure: false}
							}"
								unit="{Forcurkey}"
								state="Information"
							/>
							<Switch
								type="AcceptReject"
								state="{Invoice}"
								enabled="false"
							>
								<layoutData>
									<FlexItemData growFactor="1"/>
								</layoutData>
							</Switch>
						</cells>
					</ColumnListItem>
				</dependents>
			</Table>
			</IconTabFilter>
			<IconTabFilter
				icon="sap-icon://attachment"
				key="attachments"
				count="3">
				<Text text="Attachments go here ..." />
			</IconTabFilter>
			<IconTabFilter
				icon="sap-icon://notes"
				key="notes"
				count="12">
				<Text text="Notes go here ..." />
			</IconTabFilter>
			<IconTabFilter icon="sap-icon://group" key="people">
				<Text text="People content goes here ..." />
			</IconTabFilter>
		</items>
	</IconTabBar>
		</content>
	</Page>
</mvc:View>