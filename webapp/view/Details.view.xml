<mvc:View
	controllerName="sap.ui.demo.basicTemplate.controller.Details"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
>
	<Page
		id="pageDetails"
		title="{i18n>titleDetails}"
		showNavButton="true"
		navButtonPress="onBackToHome"
	>
		<content>
			<Table id="tableDetails">
				<columns>
					<Column>
						<Label text="Carrier ID"/>
					</Column>
					<Column>
						<Label text="Connection ID"/>
					</Column>
					<Column>
						<Label text="Price"/>
					</Column>
					<Column>
						<Label text="Invoice"/>
					</Column>
				</columns>
				<dependents>
					<ColumnListItem id="colListItemTempl" type="Active" press='onDetailPress'>
						<cells>
							<Text text="{Carrid}"/>
							<Text text="{Connid}"/>
							<ObjectNumber
								inverted="true"
								number="{
								parts:[{path:'Forcuram'},{path:'Forcurkey'}],
								type: 'sap.ui.model.type.Currency',
								formatOptions: {showMeasure: false}
							}"
								unit="{Forcurkey}"
								state="Information"
							/>
							<Switch
								type="AcceptReject"
								state="{Invoice}"
								enabled="false"
							>
								<layoutData>
									<FlexItemData growFactor="1"/>
								</layoutData>
							</Switch>
						</cells>
					</ColumnListItem>		
				</dependents>
			</Table>
		</content>
	</Page>
</mvc:View>